{
  "root": true,
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "next",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": 2,
    "@typescript-eslint/no-var-requires": 0,
    "block-scoped-var": 2,
    "eqeqeq": 2,
    "func-names": 2,
    "no-bitwise": 2,
    "no-caller": 2,
    "no-console": 1,
    "no-lonely-if": 2,
    "no-nested-ternary": 2,
    "no-return-assign": 2,
    "no-self-compare": 2,
    "no-throw-literal": 2,
    "no-undef": 0,
    "no-unneeded-ternary": 2,
    "no-use-before-define": 2,
    "no-var": 2,
    "no-void": 2,
    "object-shorthand": 2,
    "operator-assignment": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "radix": 2,
    "spaced-comment": 2
  }
}
